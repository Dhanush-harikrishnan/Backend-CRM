# Database (Neon.tech PostgreSQL or any PostgreSQL)
DATABASE_URL="postgresql://username:password@your-host.neon.tech/dbname?sslmode=require"

# JWT Secret (MUST be 32+ characters for production)
JWT_SECRET="your-super-secret-jwt-key-must-be-32-chars-minimum-change-this"
JWT_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="development"
PORT=5000

# CORS - Your frontend URL(s)
# Single origin: http://localhost:3000
# Multiple origins (comma-separated): http://localhost:3000,http://localhost:5173,https://yourdomain.com
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
